<?xml version="1.0" encoding="UTF-8"?>
<metamorph-test version="1.0"
	xmlns="http://www.culturegraph.org/metamorph-test" xmlns:mm="http://www.culturegraph.org/metamorph"
	xmlns:cgxml="http://www.culturegraph.org/cgxml">




	<test-case name="custom entity marker">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:entity name="entity">
							<cgxml:literal name="data" value="Aloha" />
						</cgxml:entity>
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1" entityMarker="X">
				<mm:rules>
					<mm:data source="entityXdata" name="data" />
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Aloha" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="meta data">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:meta>
					<mm:name>test</mm:name>
				</mm:meta>
				<mm:rules>
					<mm:data source="_id" name="name">
						<mm:constant value="name" />
						<mm:lookup in="__meta" />
					</mm:data>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="name" value="test" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="else tag">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data1" value="Aloha" />
						<cgxml:literal name="data2" value="Aloha" />
						<cgxml:literal name="data3" value="Aloha" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:data source="data1" name="Hawaii" />
					<mm:data source="_else" />
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="Hawaii" value="Aloha" />
						<cgxml:literal name="data2" value="Aloha" />
						<cgxml:literal name="data3" value="Aloha" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>


	<test-case name="? wildcard match">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:entity name="ABC">
							<cgxml:literal name="d" value="Aloha1" />
						</cgxml:entity>
						<cgxml:entity name="ABD">
							<cgxml:literal name="d" value="Aloha2" />
						</cgxml:entity>
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:data source="AB?.d" name="Hawaii" />
					<mm:data source="ABC.d" name="Oahu" />
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml" strict-key-order="false">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="Oahu" value="Aloha1" />
						<cgxml:literal name="Hawaii" value="Aloha1" />
						<cgxml:literal name="Hawaii" value="Aloha2" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="xinclude">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Aloha" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<metamorph version="1" xmlns="http://www.culturegraph.org/metamorph">
				<rules>
					<data source="data">
						<lookup in="map" />
					</data>
				</rules>
				<maps>
					<include href="src/test/resources/include.xml" parse="xml"
						xmlns="http://www.w3.org/2001/XInclude" />
				</maps>
			</metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Hawaii" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="vars">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Aloha" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<metamorph version="1" xmlns="http://www.culturegraph.org/metamorph">
				<vars>
					<var name="source" value="data" />
					<var name="equals" value="Aloha" />
				</vars>
				<rules>
					<data source="$[source]">
						<equals string="$[equals]" />
						<constant value="Hawaii" />
					</data>
				</rules>

			</metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Hawaii" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

</metamorph-test>
