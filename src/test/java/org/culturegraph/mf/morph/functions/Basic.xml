<?xml version="1.0" encoding="UTF-8"?>
<metamorph-test version="1.0"
	xmlns="http://www.culturegraph.org/metamorph-test" xmlns:mm="http://www.culturegraph.org/metamorph"
	xmlns:cgxml="http://www.culturegraph.org/cgxml">

	<test-case name="chaining in data">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value=" abc " />
					</cgxml:record>
					<cgxml:record id="2">
						<cgxml:literal name="data" value=" abc " />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:data source="data">
						<mm:trim />
						<mm:replace pattern=" " with="X" />
						<mm:replace pattern="a" with="A" />
						<mm:regexp match="Abc" />
					</mm:data>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Abc" />
					</cgxml:record>
					<cgxml:record id="2">
						<cgxml:literal name="data" value="Abc" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="chaining in entities">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value=" abc " />
					</cgxml:record>
					<cgxml:record id="2">
						<cgxml:literal name="data" value=" abc " />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1">
				<mm:rules>
					<mm:choose>
						<mm:data source="data">
							<mm:trim />
							<mm:replace pattern=" " with="X" />
							<mm:replace pattern="a" with="A" />
							<mm:regexp match="Abc" />
						</mm:data>
					</mm:choose>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Abc" />
					</cgxml:record>
					<cgxml:record id="2">
						<cgxml:literal name="data" value="Abc" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>

	<test-case name="loading">
		<input type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Aloha" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</input>

		<transformation type="text/x-metamorph+xml">
			<mm:metamorph version="1" xmlns:my="http://www.culturegraph.org/my">
				<mm:rules>
					<mm:data source="data">
						<mm:java class="org.culturegraph.mf.morph.functions.Compose" prefix="Hula " />
					</mm:data>
				</mm:rules>
			</mm:metamorph>
		</transformation>

		<result type="text/x-cg+xml">
			<cgxml:cgxml version="1.0">
				<cgxml:records>
					<cgxml:record id="1">
						<cgxml:literal name="data" value="Hula Aloha" />
					</cgxml:record>
				</cgxml:records>
			</cgxml:cgxml>
		</result>
	</test-case>



</metamorph-test>
